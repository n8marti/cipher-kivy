#:kivy 2.0

<CipherBoxLayout>:
    opt1: opt1
    opt2: opt2
    opt3: opt3
    text_input: text_input
    text_output: text_output

    minimum_height: 600
    minimum_width: 800
    spacing: 5
    padding: [10, 10, 10, 10]
    TextInput:
        id: text_input
        hint_text: 'Enter your text here.'
        size_hint: .4, 1
    BoxLayout:
        padding: [5, 0, 5, 0]
        orientation: 'vertical'
        size_hint: .2, 1
        Image:
            source: root.icon_path
            size_hint: 1, .2
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, .5
            padding: 5
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 1
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                size_hint: 1, .16
                text: 'Choose your code:'
            MyToggle:
                id: opt1
                text: 'Option 1'
                on_press: root.handle_code_choice(self)
            MyToggle:
                id: opt2
                text: 'Option 2'
                on_press: root.handle_code_choice(self)
            MyToggle:
                id: opt3
                text: 'Option 3'
                on_press: root.handle_code_choice(self)
        BoxLayout:
            spacing: 5
            padding: [0, 10, 0, 5]
            size_hint: 1, .2
            Button:
                text: 'Encode'
                on_release: root.handle_encode_or_decode_clicked(self)
            Button:
                text: 'Decode'
                on_release: root.handle_encode_or_decode_clicked(self)
        Button:
            text: 'Clear'
            size_hint: 1, .1
            on_release: root.handle_clear_clicked(self)
    TextInput:
        id: text_output
        hint_text: 'Output will be shown here.'
        size_hint: .4, 1
        readonly: True

<MyToggle@ToggleButton>:
    size_hint: 1, .28
